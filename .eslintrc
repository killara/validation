{
  "extends": "eslint-config-egg",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "no-bitwise": ["error", { "allow": ["~"] }],
    "no-cond-assign": "error"
  },
  "env": {
    "jest/globals": true
  }
}